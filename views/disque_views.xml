<?xml version="1.0"?>
<openerp>
    <record id="view_tree_disque" model="ir.ui.view">
        <field name="name">disque tree</field>
        <field name="model">Disque</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="artiste_id"/>
                <field name="genre_id"/>
                <field name="annee"/>
                <field name="pays_id"/>
                <field name="support"/>
            </tree>
        </field>
    </record>

    <record id="view_form_disque" model="ir.ui.view">
        <field name="name">disque form</field>
        <field name="model">Disque</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <field name="name"/>
                        <field name="artiste_id"/>
                        <field name="pays_id"/>
                        <field name="annee"/>
                        <field name="genre_id"/>
                        <field name="support"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</openerp>