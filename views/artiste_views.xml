<?xml version="1.0"?>
<openerp>
    <record id="view_tree_artiste" model="ir.ui.view">
        <field name="name">Artiste tree</field>
        <field name="model">vinyl.artiste</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pays_id"/>
            </tree>
        </field>
    </record>

    <record id="view_form_artiste" model="ir.ui.view">
        <field name="name">Artiste form</field>
        <field name="model">vinyl.artiste</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <field name="name"/>
                        <field name="pays_id"/>
                        <field name="album_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</openerp>